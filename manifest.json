{
    "name" : "Loowid Screen Capturing",
    "author": "Loowid.com",
    "version" : "1.0.1",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "This is a WebRTC screen capturing extension that can be used with LooWID.com, it's based on the previous work of Muaz Khan",
    "homepage_url": "https://www.loowid.com",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": false
    },
    "content_scripts": [ {
       "js": [ "content-script.js" ],
       "all_frames": true,
       "run_at": "document_start",
       "matches": ["https://www.loowid.com/*","https://localhost/*"]
    }],
    "icons" : {
        "128" : "hero.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "hero.png"
    ]
}
